<div class="entry" id="<%= dom_id entry %>">
    <h2><%= entry.question %></h2>
    <p class="entry__subtitle"><small>last updated by <%= entry.user.name %> on <%= entry.updated_at.strftime("%b %-d, %Y") %></small></p>
    <div class="entry__answer">
        <p><%= entry.content %></p>
    </div>
    <div class="tagcloud">
        <ul>
            <% entry.tags.each do |tag| %>
                <li>
                    <a href="<%= entries_path %>?tag=<%= tag.name %>" class=""><%= tag.name %></a>
                </li>
            <% end %>
        </ul>
    </div>
</div>
