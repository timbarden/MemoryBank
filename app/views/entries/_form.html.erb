<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form__item">
    <%= form.label "Question" %>
    <%= form.text_field :question %>
  </div>

  <div class="form__item">
    <%= form.label "Answer" %>
    <%= form.text_area :answer, rows: 10 %>
  </div>

  <!-- helpful video: https://www.youtube.com/watch?v=03enr4NNgLI&ab_channel=Deanin -->
  <div class="form__item">
    <%= form.label "Tags" %>
    <%= form.text_field :tags, value: entry.tags.map(&:name).join(",") %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
